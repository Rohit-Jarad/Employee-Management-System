@model Employee_Management_System.Models.DTOs.UpdateEmployeeDto
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Edit Employee</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <h5 class="mb-3">Personal Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">
                                @Html.DisplayNameFor(m => m.FirstName) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">
                                @Html.DisplayNameFor(m => m.LastName) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label">@Html.DisplayNameFor(m => m.DateOfBirth)</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Contact Information</h5>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            @Html.DisplayNameFor(m => m.Email) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">@Html.DisplayNameFor(m => m.PhoneNumber)</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="+1234567890" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Employment Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label">@Html.DisplayNameFor(m => m.Department)</label>
                            <input asp-for="Department" class="form-control" placeholder="Enter department" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Position" class="form-label">@Html.DisplayNameFor(m => m.Position)</label>
                            <input asp-for="Position" class="form-control" placeholder="Enter position" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="HireDate" class="form-label">@Html.DisplayNameFor(m => m.HireDate)</label>
                            <input asp-for="HireDate" type="date" class="form-control" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Salary" class="form-label">@Html.DisplayNameFor(m => m.Salary)</label>
                            <input asp-for="Salary" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Update Employee</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
