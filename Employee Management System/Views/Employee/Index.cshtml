@model IEnumerable<Employee_Management_System.Models.ViewModels.EmployeeViewModel>
@{
    ViewData["Title"] = "Employees";
}

<div class="page-wrapper">

    <!-- PAGE HEADER: Title + Search + Export + Add Employee -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill me-2"></i> Employee List
        </h2>

        <div class="d-flex align-items-center gap-2">

            <!-- SEARCH BAR -->
            <div class="input-group" style="width: 260px;">
                <span class="input-group-text bg-white">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text"
                       class="form-control"
                       placeholder="Search by name, email, department or position">
            </div>

            <!-- EXPORT BUTTON (UI ONLY) -->
            <button class="btn btn-outline-success" title="Download Excel">
                <i class="bi bi-file-earmark-excel"></i> Export
            </button>

            <!-- ADD EMPLOYEE -->
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Add Employee
            </a>
        </div>
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- EMPTY STATE -->
    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="bi bi-person-x fs-1 text-muted"></i>
                <h5 class="mt-3 text-muted">No employees found</h5>
                <p class="text-muted">Add your first employee to get started</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Employee
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- TABLE -->
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    Name
                                    <i class="bi bi-arrow-up-short sort-icon"></i>
                                    <i class="bi bi-arrow-down-short sort-icon"></i>
                                </th>
                                <th>
                                    Email
                                    <i class="bi bi-arrow-up-short sort-icon"></i>
                                    <i class="bi bi-arrow-down-short sort-icon"></i>
                                </th>
                                <th>
                                    Department
                                    <i class="bi bi-arrow-up-short sort-icon"></i>
                                    <i class="bi bi-arrow-down-short sort-icon"></i>
                                </th>
                                <th>
                                    Position
                                    <i class="bi bi-arrow-up-short sort-icon"></i>
                                    <i class="bi bi-arrow-down-short sort-icon"></i>
                                </th>
                                <th>Phone</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.FullName</strong></td>
                                    <td>@item.Email</td>
                                    <td>@item.Department</td>
                                    <td>@item.Position</td>
                                    <td>@item.PhoneNumber</td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

</div>
