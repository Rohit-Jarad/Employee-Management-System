@model Employee_Management_System.Models.ViewModels.PagedResult<Employee_Management_System.Models.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
}

<div class="page-wrapper">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill me-2"></i> Employee List
        </h2>

        <!-- SEARCH + EXPORT + ADD -->
        <div class="d-flex align-items-center gap-2">

            <!-- SEARCH FORM -->
            <form method="get" class="d-flex gap-2">
                <div class="input-group" style="width:260px;">
                    <span class="input-group-text bg-white">
                        <i class="bi bi-search"></i>
                    </span>
                    <input name="searchTerm"
                           value="@ViewBag.SearchTerm"
                           class="form-control"
                           placeholder="Search by name, email, department or position" />
                </div>

                <button class="btn btn-outline-primary">Search</button>
            </form>

            <!-- EXPORT -->
            <a asp-action="ExportToExcel"
               asp-route-searchTerm="@ViewBag.SearchTerm"
               class="btn btn-outline-success">
                <i class="bi bi-file-earmark-excel"></i> Export to Excel
            </a>

            <!-- ADD -->
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Add Employee
            </a>
        </div>
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- EMPTY STATE -->
    @if (Model == null || Model.Items == null || !Model.Items.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <h5 class="text-muted">No employees found</h5>
            </div>
        </div>
    }
    else
    {
        <!-- TABLE -->
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">

                        <!-- SIMPLE HEADER (NO SORT, NO LINKS) -->
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Position</th>
                                <th>Phone</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td><strong>@item.FullName</strong></td>
                                    <td>@item.Email</td>
                                    <td>@item.Department</td>
                                    <td>@item.Position</td>
                                    <td>@item.PhoneNumber</td>

                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

        <!-- PAGINATION -->
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-route-pageNumber="@i"
                           asp-route-searchTerm="@ViewBag.SearchTerm">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }

</div>

