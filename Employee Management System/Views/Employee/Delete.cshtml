@model Employee_Management_System.Models.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Delete Employee</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete this employee? This action cannot be undone.
                </div>

                <h5 class="mb-3">Employee Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.FullName):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.FullName)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email):</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Department):</dt>
                    <dd class="col-sm-8">@(Model.Department ?? "Not specified")</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Position):</dt>
                    <dd class="col-sm-8">@(Model.Position ?? "Not specified")</dd>
                </dl>

                <hr />

                <form asp-action="Delete" method="post" class="mb-3">
                    <input type="hidden" asp-for="Id" />
                    @Html.AntiForgeryToken()
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Yes, Delete Employee</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
