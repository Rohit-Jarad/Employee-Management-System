@model Employee_Management_System.Models.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Employee Details";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Employee Details</h4>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-light btn-sm">Delete</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h3 class="text-primary">@Model.FullName</h3>
                        <p class="text-muted mb-0">Employee ID: @Model.Id</p>
                    </div>
                </div>

                <hr />

                <h5 class="mb-3">Personal Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.FirstName):</strong>
                        <p>@Html.DisplayFor(m => m.FirstName)</p>
                    </div>
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.LastName):</strong>
                        <p>@Html.DisplayFor(m => m.LastName)</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.DateOfBirth):</strong>
                        <p>@(Model.DateOfBirth?.ToString("MMMM dd, yyyy") ?? "Not specified")</p>
                    </div>
                </div>

                <hr />

                <h5 class="mb-3">Contact Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.Email):</strong>
                        <p>@Html.DisplayFor(m => m.Email)</p>
                    </div>
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.PhoneNumber):</strong>
                        <p>@(Model.PhoneNumber ?? "Not specified")</p>
                    </div>
                </div>

                <hr />

                <h5 class="mb-3">Employment Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.Department):</strong>
                        <p>@(Model.Department ?? "Not specified")</p>
                    </div>
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.Position):</strong>
                        <p>@(Model.Position ?? "Not specified")</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.HireDate):</strong>
                        <p>@(Model.HireDate?.ToString("MMMM dd, yyyy") ?? "Not specified")</p>
                    </div>
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.Salary):</strong>
                        <p>@(Model.Salary?.ToString("C") ?? "Not specified")</p>
                    </div>
                </div>

                <hr />

                <h5 class="mb-3">System Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.CreatedAt):</strong>
                        <p>@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <strong>@Html.DisplayNameFor(m => m.UpdatedAt):</strong>
                        <p>@(Model.UpdatedAt?.ToString("MMMM dd, yyyy HH:mm") ?? "Never")</p>
                    </div>
                </div>

                <hr />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Employee</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Employee</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
