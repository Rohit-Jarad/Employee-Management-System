<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-10 text-center">

        <h2 class="fw-bold mb-5 text-primary">Dashboard</h2>

        <div class="row g-4 justify-content-center">

            <div class="col-md-4">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-body py-4">
                        <i class="bi bi-people-fill fs-1 text-primary"></i>
                        <h6 class="mt-3 text-muted">Total Employees</h6>
                        <h2 class="fw-bold">@ViewBag.TotalEmployees</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-body py-4">
                        <i class="bi bi-building fs-1 text-success"></i>
                        <h6 class="mt-3 text-muted">Departments</h6>
                        <h2 class="fw-bold">@ViewBag.TotalDepartments</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-body py-4">
                        <i class="bi bi-person-badge fs-1 text-warning"></i>
                        <h6 class="mt-3 text-muted">Active Users</h6>
                        <h2 class="fw-bold">@ViewBag.ActiveUsers</h2>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
