@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Employee Management System</h1>
    
    @if (User.Identity!.IsAuthenticated)
    {
        <p class="lead mt-4">Hello, <strong>@User.Identity.Name</strong>!</p>
        <p class="mt-3">You can now manage employees in the system.</p>
        <div class="mt-4">
            <a asp-controller="Employee" asp-action="Index" class="btn btn-primary btn-lg">Manage Employees</a>
        </div>
    }
    else
    {
        <p class="lead mt-4">Please login to access the employee management features.</p>
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">Register</a>
        </div>
    }
</div>
